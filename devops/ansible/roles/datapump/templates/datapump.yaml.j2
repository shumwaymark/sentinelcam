%YAML 1.0
---
# Settings file datapump.yaml 
# Generated by Ansible template

control_port: {{ sentinelcam_ports.datapump_control }}
camwatcher: tcp://127.0.0.1:{{ sentinelcam_ports.camwatcher_control }}

# Data storage locations  
imagefolder: {{ sentinelcam_directories.images }}
datafolder:  {{ sentinelcam_directories.csvfiles }}

# Current FaceList CSV file, defines the population of locked events
facefile: {{ faces_data_file }}

# Logging configuration
logconfig:
    version: 1
    formatters:
        default:
            format: '%(asctime)s %(levelname)s: %(message)s'
    handlers:
        file:
            class: logging.handlers.RotatingFileHandler
            filename: {{ sentinelcam_directories.logs }}/datapump.log
            formatter: default
            maxBytes: {{ sentinelcam_logging.rotation.max_bytes | default(524288) }}
            backupCount: {{ sentinelcam_logging.rotation.backup_count | default(5) }}
            level: {{ 'DEBUG' if debug_mode else sentinelcam_logging.level | default('WARN') }}
    root:
        handlers: [file]
        level: {{ 'DEBUG' if debug_mode else sentinelcam_logging.level | default('WARN') }}
